<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPackageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PackageName"
                android:textSize="30sp"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/tvPackageDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PackageDetails"
                android:textSize="30sp"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/tvPackageDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PackageDuration"
                android:textSize="30sp"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/tvPackagePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PackagePrice"
                android:textSize="30sp"
                android:textColor="@color/red"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnAddPackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="end"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>